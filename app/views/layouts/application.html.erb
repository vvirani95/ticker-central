<!DOCTYPE html>
<html>
  
  <header>
    <ul class="top-header">  
    <li class="i"><div>
      <%= image_tag('hamburger-icon.png', class: "menu-icon") %>
      <section class="dropdown">
      </section>
    </div></li>

    <li class="ii"><%= link_to image_tag('site-icon.png', class: "site-icon"), root_path %></li>

    <li class="iii"><section>
      <form action="/ticker" method="GET">
        <label for="ticker-search-bar">Search: </label>
        <input type="text" class="ticker-search-bar" name="search">
        <button type="submit">Submit</button>
      </form>
    </section></li>
    </ul>
  </header>
  
  <br>
  
  <head>
    <title>Ticker Central</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
